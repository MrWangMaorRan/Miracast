<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/setting_back"
        android:layout_marginTop="10dp"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="手机投屏"
    android:gravity="center"
    android:textColor="#333333"
    android:textSize="25sp"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@mipmap/setting_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0版本"
            android:textColor="#333333"
            android:layout_marginTop="15dp"
            android:textSize="15sp"/>
    </LinearLayout>



    <FrameLayout
        android:id="@+id/setting_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        app:layout_constraintBottom_toTopOf="@+id/ll3"
        android:layout_marginTop="30dp"/>
    <!--<LinearLayout
        android:id="@+id/ll7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        app:layout_constraintBottom_toTopOf="@id/ll3"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/text_underline">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享给好友"
            android:textColor="#333333"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/in"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>-->

    <LinearLayout
       android:id="@+id/ll3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
       app:layout_constraintTop_toBottomOf="@id/ll2"
       app:layout_constraintBottom_toTopOf="@id/ll4"
       android:padding="10dp"
       android:orientation="horizontal"
       android:background="@drawable/text_underline">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="给个好评"
         android:textColor="#333333"
         android:textSize="20sp"
        android:layout_marginLeft="5dp"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/in"
           android:layout_marginLeft="220dp"
           android:layout_marginTop="5dp"/>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll3"
        app:layout_constraintBottom_toTopOf="@id/ll5"
        android:padding="10dp"
        android:background="@drawable/text_underline"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textColor="#333333"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/in"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll4"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/text_underline">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textColor="#333333"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/in"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>